{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 24",
  "_version": "24.13.0",
  "compilerOptions": {
    "lib": [
      "ES2023"
    ],
    "module": "CommonJS",
    "target": "ES2022",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "node",
      "vitest/globals"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*",    
    "knexfile.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
